<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".com.iua.fabio.runningcoloapp.actividades.ListCellActivity"
    android:orientation="horizontal">


    <TextView
        android:id="@+id/tvrace"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Fecha y hora: "
        android:textColor="#000"
        android:layout_marginLeft="40dp"
        android:textSize="20dp"
        />

    <LinearLayout
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="50dp"
        >
        <android.support.design.button.MaterialButton
            android:id="@+id/buttondetail"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="@string/titulo_boton_celda_detalle"
            style="@style/Widget.RunningColoApp.Button"
            />

        <android.support.design.button.MaterialButton
            android:id="@+id/buttoneliminarregistro"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="@string/titulo_boton_celda_borrar"
            style="@style/Widget.RunningColoApp.Button"
            />
    </LinearLayout>

</LinearLayout>