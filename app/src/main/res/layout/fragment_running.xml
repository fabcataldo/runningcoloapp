<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".com.iua.fabio.runningcoloapp.actividades.RunningFragment"
    android:orientation="vertical"
    android:gravity="center">

    <!-- TODO: Update blank fragment layout -->


    <TextView
        android:id="@+id/textvf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tiempo_fragment_running"
        android:textColor="@color/myColorRed"
        android:textSize="30sp"
        />

    <Chronometer
        android:id="@+id/cronometro"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textSize="30sp"
        android:textColor="@color/myColorBlack"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"

        >

        <android.support.design.button.MaterialButton
            android:id="@+id/bstartcron"
            style="@style/Widget.RunningColoApp.Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/titulo_boton_start_cronometro"
            android:layout_gravity="center"
            />


        <android.support.design.button.MaterialButton
            android:id="@+id/bstopcron"
            style="@style/Widget.RunningColoApp.Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/titulo_boton_stop_cronometro"
            android:layout_gravity="center"
            />

    </LinearLayout>

    <TextView
        android:id="@+id/textvritmo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="30dp"
        android:layout_gravity="center"
        android:textColor="#000"
        />


</LinearLayout>