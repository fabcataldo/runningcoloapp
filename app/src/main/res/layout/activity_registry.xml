<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondoasd"

    android:orientation="vertical"
    tools:context=".com.iua.fabio.runningcoloapp.actividades.SplashActivity">

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="100dp"
        android:text="@string/titulo_boton_pantalla_registro_go"
        android:textSize="20dp"
        android:textStyle="normal"
        tools:textFontWeight="Arial" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="horizontal">

        <FrameLayout
            android:id="@+id/audiocontenedor"
            android:layout_width="300dp"
            android:layout_height="600dp"
            android:background="@drawable/fondoasd"></FrameLayout>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/floatingActionButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:clickable="true"
            app:srcCompat="@android:drawable/btn_star_big_on" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/contenedor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        ></FrameLayout>
</LinearLayout>